{% extends 'base.html.twig' %}

{% form_theme formFigure 'bootstrap_5_layout.html.twig' %}
{% block body %}

<h1>Création d'une nouvelle figure !</h1>
{# {{ form(formFigure)}} permet de faire un formulaire grossier #} 
{{ form_start(formFigure)}}
{{ form_row(formFigure.groupe, {'attr' : {'placeholder' : "Numéro du groupe"}})}}
{{ form_row(formFigure.name, {'attr' : {'placeholder' : "Nom de la figure"}}) }}
{{ form_row(formFigure.image, {'attr' : {'placeholder' : "Nom de l'image la figure"}}) }}
{{ form_row(formFigure.content, {'attr' : {'placeholder': "Description de la figure"}}) }}

<button type="submit" class="btn btn-success">

    Ajouter l'article
</button>

{{ form_end(formFigure) }}

{% endblock %}