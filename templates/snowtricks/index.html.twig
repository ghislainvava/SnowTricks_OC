{% extends 'base.html.twig' %}

{% block title %}Bonjour SnowtricksController!{% endblock %}

{% block body %}
    
    <div class=" container " > 
        <div class="d-flex justify-content-around flex-wrap ">
            {% for figure in figures %}
            {% set firstImg = figure.pictures | first %}
                <div class="m-3 align-self-end" >
                    <div>
                        <img src="{{ asset('/uploads/' ~ firstImg.name) | imagine_filter('carre') }}" alt="Picture"  > 
                    </div>
                    <div class="card-text text-center m-3">
                        <a href="{{ path('figure_show', {'id' : figure.id, 'slug' : figure.name | slug })  }} " class="btn btn-primary">{{ figure.name | raw }}</a>
                         {% if is_granted('ROLE_ADMIN' )  or (figure.user is same as (app.user))  %}
                            <a href="{{ path('snowtrick_delete', {'id' : figure.id})}}" class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-trash-can"></i></a>
                            <a href="{{ path('edit_figure', {'id' : figure.id})}}" class="btn btn-sm btn-outline-primary"><i class="fa-solid fa-pen-clip"></i></a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
  
        </div>  
         <div class="container">
                <div class="d-flex align-item-center ">
                     {{ knp_pagination_render(figures) }}
                </div>
            </div>
    </div>          
{% endblock %}
