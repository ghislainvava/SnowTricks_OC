<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/flatly/bootstrap.min.css">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
      <ul class="navbar-nav me-auto">
            <li class="nav-item">
                <a class="nav-link active" href="{{ path('home') }}">Snowtricks</a>
            </li>
            <li class="nav-item">
                    <a class="nav-link" href="{{ path('snowtrick_create') }}">Créer une figure</a>
            </li> 
            {% if not app.user%}
            <li class="nav-item">
                    <a class="nav-link" href="{{ path('security_registration') }}">Inscription</a>
            </li> 
            
            <li class="nav-item">
                    <a class="nav-link" href="{{ path('security_login') }}">Connection</a>
            </li> 
        {% else %}
       </ul>
       <ul class="navbar-nav me-auto">
            <li class="nav-item ">
                <a class="nav-link" href={{ path('administration')}}>  {{ app.user.username }} </a>
            </li> 

            <li class="nav-item">
                <a class="nav-link" href="{{ path('security_logout') }}">Vous déconnecter</a>
            </li> 
        {% endif %}
      </ul>

  </div>
</nav>

{% if app.user and app.user.IsVerify == false %}
    <div class="alert alert-warning alert-dismissible" role='alert'>
        <button type="button" class="btn-close" data-bs-dismiss="alert" arial-label="Close"></button>
            <div class="alert-message">Votre compte n'est pas activé 
            <a href="{{ path('resend_verif') }}">renvoyer le lien d'activation</a> 
        </div>
    </div>
    
{% endif %}
{% include "partials/flash.html.twig" %}
    {% block body %}
    
    {% endblock %}

        
    </body>
</html>
