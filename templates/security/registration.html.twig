{% extends "base.html.twig" %}

{% block body %}
    <h1>Incrivez-vous !</h1>

    {{ form_start(form) }}
   
    {{ form_row(form.username, {'label': "Nom d'utilisateur", 'attr': {'placeholder': 'Nom ...'}}) }}
    {{ form_row(form.email, {'label': 'Email', 'attr': {'placeholder': 'Adresse email ...'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Password ...'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr': {'placeholder': 'Password ...'}}) }}

    <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}
{% endblock %} 